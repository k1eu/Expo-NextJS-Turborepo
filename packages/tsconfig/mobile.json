{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Expo Mobile App",
  "extends": "./base.json",
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve"
  },
  "include": ["*.tsx", "*.ts"],
  "exclude": ["node_modules"]
}
